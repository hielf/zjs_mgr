<div class="row-fluid">
	<div class="span9 well">
		<legend><p class="lead text-center muted">营销任务发起</p></legend>
		<%= simple_form_for @workflowunderway, :html => { :class => 'form-horizontal' } do |f| %>
			<%= render 'fields', :f => f %>
			<div class="form-actions">
				<%= f.submit "确认", :class => 'btn btn-primary' %>
				<%= link_to '取消', root_path, :class => 'btn' %>
			</div>
		  </fieldset>
		<% end %>
		</div>
		<div class="span3">
			<div class="mini-layout">
				<% Workflow.find_by_code("1001").workflowsteps.each do |n| %>
					<div class="row-fluid">
						<div class="span12">
							<% if n.step == 1 && n.workflow.code == "1001" %>
								<div class="well" style="color:#b94a48; background-color: #f2dede;">
							<% else %>
								<div class="well" style="color:#c09853; background-color: #fcf8e3;">
							<% end %>
							  <strong><p class="text-center"><%= n.name %></p></strong>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span12">
							<p class="text-center"><i class="icon-arrow-down"></i></p>
						</div>
					</div>
				<% end %>
				<div class="row-fluid">
					<div class="span12">
						<div class="well" style="color:#c09853; background-color: #fcf8e3;">
						  <strong><p class="text-center">完成</p></strong>
						</div>
					</div>
				</div>
			</div>
			<div class="alert alert-block">
			  <button type="button" class="close" data-dismiss="alert">&times;</button>
			  <h4>帮助</h4>
			  如果是现有团队客户，请输入资金账号，否则留空。
			</div>
		</div>
</div>