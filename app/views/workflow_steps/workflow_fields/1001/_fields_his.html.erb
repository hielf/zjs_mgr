<div class="well">
	<legend><p class="lead text-center muted">营销任务计划</p></legend>
	<%= simple_form_for @workflowhistory, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.simple_fields_for :custservvisit do |p| %>
		<fieldset>
		<%= p.input :capital_account, :label => "资金账号", disabled: true %>
		<%= p.input :cust_name, :label => '客户/公司名称', disabled: true %>
		<%= p.input :plan_location, :label => '地址', disabled: true %>
		<%= p.input :plan_date,  :as => :datetime_picker, :label => '时间', disabled: true %>
		<%= p.input :user_id, as: :hidden, input_html: { value: current_user.id }, disabled: true %>
		<%= p.input :user_name, disabled: true, :input_html => { value: current_user.name }, :label => '负责营销人员', disabled: true %>
		<%= p.input :visit_content, as: :text, :input_html => { :rows => '4' }, :label => '内容', disabled: true %>
		</fieldset>
	<% end %>
	<% end %>
</div>

<div class="well">
	<legend><p class="lead text-center muted">营销任务执行</p></legend>
	<%= simple_form_for @workflowhistory, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.simple_fields_for :custservvisit do |p| %>
		<fieldset>
		<%= p.input :visit_location, :label => '地址', disabled: true %>
		<%= p.input :visit_date,  :as => :datetime_picker, :label => '时间', disabled: true %>
		<%= p.input :user_id, as: :hidden, input_html: { value: current_user.id }, disabled: true %>
		<%= p.input :assit_user_id, :collection => User.valid_user.find_all_by_branch_id(current_user.branch_id),
								:label => '协同人员(如有)', disabled: true %>
		<%= p.input :memo, as: :text, :input_html => { :rows => '4' }, :label => '内容', disabled: true %>
		</fieldset>
	<% end %>
		<div class="form-actions">
			<%= link_to '返回', workflowhistories_path, :class => 'btn' %>
		</div>
	  </fieldset>
	<% end %>
</div>
