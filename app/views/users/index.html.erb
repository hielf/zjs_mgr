<%= render :partial => 'grid' %>

<div class="row-fluid">
	<div class="span12 well">
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							用户代码：
						</div>
						<div class="span8">
							<%= grid_filter @users_grid, :usercode_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							用户姓名：
						</div>
						<div class="span8">
							<%= grid_filter @users_grid, :name_filter  %>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							分公司：
						</div>
						<div class="span8">
							<%= grid_filter @users_grid, :department_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							营业部：
						</div>
						<div class="span8">
							<%= grid_filter @users_grid, :branch_filter  %>
						</div>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<div class="form-actions">
						<button class="btn btn-primary wg-external-submit-button" data-grid-name="users">查询</button>
						<button class="btn wg-external-reset-button" data-grid-name="users">重置</button>
						<button class="btn btn-success wg-external-csv-export-button pull-right" data-grid-name="users">导出</button>
					</div>	
				</div>
			</div>
		</div>
	</div>
<%= render_grid(@users_grid) %>