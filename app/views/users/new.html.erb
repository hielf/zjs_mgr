<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>新用户注册</strong></legend></p>
			<%= content_for(:the_links) do %>
				已阅读并同意 <%= link_to "《居间人协议》", terms_path, :target => "_blank" %> 
			<% end %>
			<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
			  <fieldset>
				<%= render 'fields_new', :f => f %>
				</fieldset>
				<div class="form-actions">
					<%= f.submit "确认注册", :class => 'btn btn-primary' %>
					<%= link_to '取消', root_path, :class => 'btn' %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="span3">
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>欢迎注册成为摩尔街居间人！</h4>
		  <p>条例和规定</p>
		</div>
	</div>
</div>
