<div class="row-fluid">
	<div class="span9">
			<div class="tabbable tabs">
			  <ul class="nav nav-tabs">
			    <li class="active"><a href="#1" data-toggle="tab">角色权限</a></li>
			    <li><a href="#2" data-toggle="tab">登录日志</a></li>
			  </ul>
			  <div class="tab-content">
			    <div class="tab-pane active" id="1">
						<div class="well">
							<div class="row-fluid">
								<div class="span6">
						  		<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
										<%= render 'role_fields_view', :f => f %>
									<% end %>
						  	</div>
								<div class="span6">
						  		<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
										<%= render 'department_fields_view', :f => f %>
									<% end %>
						  	</div>
							</div>
						</div>
			    </div>
			    <div class="tab-pane" id="2">
			      <% @user.sessions.find(:all, :order => "created_at desc", :limit => 10).each do |s| %>
			      	<div class="well well-small">
			      		前台登录： <%= s.created_at %>
			      	</div>
			      <% end %>
			    </div>
			  </div>
			</div>
	</div>
	<div class="span3">
		<%= render 'sidebar_user'%>
		
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>帮助</h4>
		  用户资料与人力资源部同步，无需自行修改，用户权限由销售交易总部分配。
		</div>
	</div>
</div>