<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>起草公告</strong></legend></p>
			<%= simple_form_for @notice, :html => { :class => 'form-horizontal' } do |f| %>
			  <fieldset>
				<%= render 'fields', :f => f %>
				</fieldset>
				<div class="form-actions">
					<%= f.submit "确认", :class => 'btn btn-primary' %>
					<%= link_to '取消', notices_path, :class => 'btn' %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="span3">
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>帮助</h4>
		  <p>公告发送后，所有用户登录系统后会收到最新公告。</p>
		</div>
	</div>
</div>