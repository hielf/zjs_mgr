<div class="row-fluid">
	<div class="span9">
		<div class="row-fluid">
			<div class="mini-layout">
			<p class="lead text-center">新通知</p>
				<table class="table table-striped table-condensed">	
					<thead>
						<tr>
				      <th>标题</th>
				      <th class="hidden-phone">内容</th>
				      <th class="hidden-phone" colspan="2">时间</th>
				    </tr>
					</thead>
				  <tbody>
						<%= render :partial => "notices/notice", :collection => @unreads %>
		  		</tbody>
				</table>
			</div>
				</br>
				</br>
			<div class="accordion" id="accordion1">
				<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse">
								<p class="lead text-center muted">已读通知</p>
							</a>
						</div>
						<div id="collapse" class="collapse">
							<div class="accordion-inner">
								<table class="table table-striped table-condensed">	
									<thead>
										<tr>
								      <th class="muted">标题</th>
								      <th class="muted hidden-phone">内容</th>
								      <th class="muted hidden-phone" colspan="2">时间</th>
								    </tr>
									</thead>
								  <tbody>
										<%= render :partial => "notices/notice", :collection => @reads %>
						  		</tbody>
								</table>
							</div>
						</div>
				</div>		
			</div>
		</div>
	</div>
	<div class="span3">
		<div class="alert alert-block hidden-phone">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <p>这里是所有通知的列表。</p>
		</div>
		<% if can? :create, Notice %>
			<%= link_to '起草新通知', new_notice_path, :class => 'btn btn-primary' %>
		<% end %>
	</div>
</div>
