<div class="row-fluid">
	<div class="span9">
    <div class="well">
      <p class="lead text-center"><legend><strong>客户关系设置</strong></legend></p>
      <%= simple_form_for @cust, :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <%= render 'custrel_fields', :f => f %>
        </fieldset>
        <div class="form-actions">
          <%= f.submit "确认", :class => 'btn btn-primary' %>
          <%= link_to '取消', custs_path, :class => 'btn' %>
        </div>
      <% end %>
    </div>
	</div>
	<div class="span3">
		<div class="alert alert-block hidden-phone">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<h4>帮助</h4>
			<p>可使用此功能重新分配客户关系。</p>
		</div>
	</div>
</div>
