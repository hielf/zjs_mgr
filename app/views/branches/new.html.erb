<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>新建分支机构</strong></legend></p>
			<%= simple_form_for @branch, :html => { :class => 'form-horizontal' } do |f| %>
			  <fieldset>
				<%= render 'fields_new', :f => f %>
				</fieldset>
				<div class="form-actions">
					<%= f.submit "确认", :class => 'btn btn-primary' %>
					<%= link_to '取消', branches_path, :class => 'btn' %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="span3">
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>帮助</h4>
		  <p>设置分支机构。</p>
		</div>
	</div>
</div>
