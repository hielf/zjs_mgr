					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							人员姓名：
						</div>
						<div class="span8">
							<%= grid_filter @brokers_grid, :name_filter  %>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							营业部：
						</div>
						<div class="span8">
							<%= grid_filter @brokers_grid, :branch_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							人员类型：
						</div>
						<div class="span8">
							<%= grid_filter @brokers_grid, :type_filter  %>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span6">
					<div class="row-fluid">
						<div class="span4">
							状态：
						</div>
						<div class="span8">
							<%= grid_filter @brokers_grid, :status_filter  %>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="row-fluid">
					</div>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span12">
					<div class="form-actions">
						<button class="btn btn-primary wg-external-submit-button" data-grid-name="brokers">查询</button>
						<button class="btn wg-external-reset-button" data-grid-name="brokers">重置</button>
						<button class="btn btn-success wg-external-csv-export-button pull-right" data-grid-name="brokers">导出</button>
					</div>	
				</div>
			</div>
		</div>
