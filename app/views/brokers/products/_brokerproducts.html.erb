<% if time_period(time) == "上午" %>
	<div class="row-fluid">
		<div class="alert alert-block">
			可以把需要关注的产品放入您专属的收藏夹，方便向客户推荐。
	  	<a class="close" data-dismiss="alert">×</a>
		</div>
	</div>
<% end %>
<div class="row-fluid">
	<div class="span6">
		<div class="well well-small">
			<table class="table table-striped table-bordered table-condensed">
			  <caption><h4><p class="text-info" style="padding-bottom: 10px;">最新产品</p></h4></caption>
			  <tbody>
			    <%= render :partial => "products/product", :collection => @newproducts %>
			  </tbody>
			</table>
		</div>
	</div>
	<div class="span6">
		<div class="well well-small">
			<table class="table table-striped table-bordered table-condensed">
			  <caption><h4><p class="text-info" style="padding-bottom: 10px;">我的收藏</p></h4></caption>
			  <tbody>
			  	<% if 1==2 %>
			    	<%= render :partial => "products/product", :collection => @brokerproducts %>
			    <% else %>
			    	<td><p class="text-center muted">目前没有收藏</p></td>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="well">
		<p class="text-center">
			<%= link_to '产品列表', products_path, :class => 'btn btn-primary' %>
		</p>
	</div>
</div>