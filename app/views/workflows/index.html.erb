<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<p class="lead text-center"><legend><strong>工作流程</strong></legend></p>
			<table class="table table-bordered table-hover table-condensed">	
				<thead>
					<tr>
						<th>工作流代码（系统）</th>
			      <th>工作流名称</th>
						<th>流程步骤</th>
			    </tr>
				</thead>
			  <tbody>
					<%= render @workflows %>
			  </tbody>
			</table>
			<div class="form-actions">
				<%= link_to '新建工作流程', new_workflow_path, :class => 'btn btn-primary pull-right' %>
			</div>
		</div>
	</div>
	<div class="span3">
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>帮助</h4>
		  工作流程在此处定义。
		</div>
	</div>
</div>
